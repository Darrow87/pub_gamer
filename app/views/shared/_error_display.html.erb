<% if flash[:error] %>
<div class="row columns text-center errors-box">
	<% flash[:error].each do |error| %>
		<p><%= error %></p>
	<% end%>
<% elsif flash[:notice] %>
	<div class="row columns text-center notice-box">
	<% flash[:notice].each do |notice| %>
		<p><%= notice %></p>
	<% end%>
<% end%>
</div>