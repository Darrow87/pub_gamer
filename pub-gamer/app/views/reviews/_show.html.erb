<div class="row venue-show-left" >
	<div class="small-4 columns">
		<div class="review-rating">
			Rating: 
			<% if review.rating %>
				<% review.rating.times do %>
					<%= image_tag("octopus.png", size: '20') %>
				<% end %>
			<% end %>
		</div>
		<div class="review-vibes">
			Vibes:
			<% review.vibes.each do |vibe| %>
				<%= image_tag("#{vibe.pic}", size: '15') %>
			<% end %>
		</div>
		<div class="review-week">
			Visited: <%= review.week %>
		</div>
		<div class="reviewed-by">
			<%= link_to "#{review.author}", user_path(review.user_id) %>
		</div>
	</div>
	<div class="small-8 columns review-content">
		<% if review.deleted? %>
			<%= render partial: 'reviews/deleted' %>
		<% else %>
			<% review.split_content.each do |line| %>
				<p class="formatted-review"><%= line %></p>
			<% end %>
		<% end %>
	</div>

</div>

<div class="row" >
	<div class="small-12 columns">
		<p class="review-date text-center"><%= review.review_date %></p>
	</div>
</div>