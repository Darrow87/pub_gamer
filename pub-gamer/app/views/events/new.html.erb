<h2>Create New Event</h2>

  <%= form_for @event do |f| %>

    <%= f.label :title %>:
  	<%= f.text_field :title %>

    <%= f.label :location %>:
    <%= f.text_field :location %>

    <%= f.label :date %>:
    <%= f.date_field :event_date %>

    <%= f.label :time %>:
    <%= f.time_select :event_time %>
 
    <%= f.label :description %>:
    <%= f.text_area :description %>

    <%= f.label "max guests" %>:
    <%= f.number_field :limit %>

    <%= f.button :submit %>
  <% end %>