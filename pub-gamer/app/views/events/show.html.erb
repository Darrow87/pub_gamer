


<h2 id="event-show-title"><%= @event.title %></h3>

<div class="row">

	<div class="small-3 columns" id="event-show-guest-list">
		<h5><b>People Attending:</b></h5>
			<%@event.guests.each do |guest| %>
				<div style="font-size: 22px" class="event-attendee-container">
				<%= link_to guest.user_name, user_path(guest)%>
				</div>
			<% end %>
	</div>

	<div class="small-9 columns" id="event-show-content-container">

		<div class="row" id="event-show-picture">
		</div>

		<div class="row">
			<div class="small-6 columns" id="event-show-details">

				<div class="row" id="event-show-location">
					 <b>Location:&nbsp</b><%= @event.location %>
				</div>

				<div class="row" id="event-show-games">
					<b>Games:&nbsp</b> <% @event.games.each do |game| %>
						<%= game.name %>
					<% end %>
				</div>

				<div class="row" id="event-show-date">
					<b>Date:&nbsp</b> <%= @event.date.strftime("%B #{@event.date.day.ordinalize}") %>
				</div>

				<div class="row" id="event-show-time">
					<b>Time:&nbsp</b> <%= @event.time.strftime('%-I:%M%p') %>
				</div>

				<div class="row" id="event-show-max">
					<b>Max Guests:&nbsp</b> <%= @event.limit %>
				</div>

				<div class ="row">
					<% if @event.guests.include?(current_user) %>
						<p>You are already going!</p>
						<%= link_to "Cannot make it", event_path(@event), method: :delete %>
						<% @event.guests.each do |guest| %>
							<%= guest.user_name %>
						<% end %>
					<% elsif @event.full? %>
						<p>Event is full :( you cannot join...</p>
					<% else %>
						<%= link_to "Join Event!", event_path(@event), method: :put %>
					<% end %>
				</div>
			<!-- end left box below picture -->
			</div>


			<div class="small-6 columns">
				<div class="row" id="event-show-description-header">
					<b style="font-size: 30px">Description:&nbsp</b>
				</div>
				<div class="row" id="event-show-description-content">
					<%= @event.description %>
				</div>
			</div>

			<!-- end small 9 -->
		</div>
		<!-- end nested row below picture -->
	</div>
	<!-- end outside row -->
</div>

		<div class="row" id="event-show-comment-container">
		<div class="small-3 columns">
		</div>
		<div class="small-5 columns"
			<% if @event.guests.include?(current_user) %>
				<% @comments.each do |comment| %>
					<%= comment.body %>
					<h6>
					-<%= comment.username %>
					</h6>
					~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
					<br>

				<% end %>


				<%= form_for [@event, @comment] do |f| %>

					<%= f.text_area :body  %>

					<%= f.button :submit, class: "button", placeholder: "Comment!", id: "comment-button" %>
				<% end %>
			<% end %>
			<div class="small-4 columns">
			</div>
		</div>