<%= link_to "create new event", new_event_path,id: "event-create-link"  %>

<div id="event-create-ajax-div">
</div>

<% @events.each do |event| %>
<div class="posted-event">
  <p class="event-index-title"><%= link_to event.title, event_path(event) %></p>
  <p class="event-index-location">Location: <%= event.location %></p>
  <p class="event-index-date">Date: <%= event.date %></p>
   <p class="event-index-time">Time: <%= event.time %></p>
  <p class="event-index-description">Description: <%= truncate event.description,  length: 30 %></p>
</div>
<% end %>
