<div id="event-create-container">

  <% if @errors %>
    <% @errors.each do |error| %>
      <%= error %>
    <%end %>
  <% end %>
  <%= form_for @event, :html => {:id => "event-create-form"} do |f| %>
    <h4>Create Event</h4>
      
    <%= f.text_field :title, placeholder: "Title" %>

   
    <%= f.text_field :location, placeholder: "Location" %>

    <div class="row">
      <div class="small-5 columns">
        <%= f.label "Date" %>
        <%= f.date_field :date %>
      </div>
      <div class="small-4 columns">
        <%= f.label "Time" %>
        <%= f.time_field :time, { :ampm => true } %>
      </div>
      <div class="small-3 columns">
        <%= f.label "Max Guests" %>
        <%= f.number_field :limit, min: "0", max: "100", placeholder: "Guests" %>
      </div>
    </div>

    <%= f.text_area :description, placeholder: "Description" %>
    <% if @games && !@games.empty? %>
      <%= f.label "Games" %>
      <div id="event-create-games">
        <% @games.each do |game| %>
          <div class="event-game">
            <%= check_box_tag "games[]", game.id %>
            <br>
            <label><%= game.name %></label>
          </div> 
        <% end %>
      </div>
    <% end %>
    <div id="event-create-button-div">
      <%= f.button :submit, class: "button", id: "event-create-submit-button" %>
    </div>
  <% end %>

</div>