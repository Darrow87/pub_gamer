<div id="event-create-container">


  <% if @errors %>
    <% @errors.each do |error| %>
      <%= error %>
    <%end %>
  <% end %>

  <%= form_for @event, :html => {:id => "event-create-form"} do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title, placeholder: "Title" %>

    <%= f.label :location %>
    <%= f.text_field :location, placeholder: "Location" %>

    <%= f.label :date %>
    <%= f.date_field :event_date %>

    <%= f.label :time %>
    <%= f.time_field :event_time, { :ampm => true } %>

    <%= f.label :description %>
    <%= f.text_area :description, placeholder: "Description" %>

    <% if @games && !@games.empty? %>
      Games:
      <% @games.each do |game| %>
      <%= check_box_tag "games[]", game.id %>
      <%= game.name %>
      <% end %>
    <% end %>
    <div id="max-guest-container">
      <p style="text-align: left">Max Guests:</p>
      <%= f.number_field :limit, min: "0", max: "100" %>
    </div>
    <%= f.button :submit, class: "button", id: "event-create-submit-button" %>
  <% end %>

</div>