<body class="background">
  <div class="row">
    <div class="login-register" class="medium-4 medium-centered text-center columns">
      <div id="login-input-field">
        <div>
          <%= form_tag new_login_path do %>
        <p>
          <%= text_field_tag :user_name, nil, placeholder: "User Name" %>
        </p>
        <p>
          <%= email_field_tag :email, nil, placeholder: "Email" %>
        </p>
        <p>
          <%= password_field_tag :password, nil, placeholder: "Password" %>
        </p>
        <p>
          <%= submit_tag "Log In", class: "button large" %>
        </p>
        <% end %>


      </div>
  </div>
</body>