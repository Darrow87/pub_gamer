<div id="login-box">
  <h4>Login</h4>
  <%= form_tag new_login_path, id: 'login-form' do %>
    <%= text_field_tag :user_name, nil, placeholder: "User Name" %>
    <%= email_field_tag :email, nil, placeholder: "Email" %>
    <%= password_field_tag :password, nil, placeholder: "Password" %>
    <%= submit_tag "Log In", class: "button large", id: "login-button" %>
  <% end %>
</div>