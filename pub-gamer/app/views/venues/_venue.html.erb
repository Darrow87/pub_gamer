<div class="row text-center" id="venue-header" >
	<div class="small-1 columns"></div>
	<div class="small-3 columns align-center" >
		<div id="avg-rating">
			<% if @venue.has_reviews? %>
				<%= render partial: 'venue_rating', locals: { current_rating: @current_rating } %>
				<% else %>
				<p>Not Yet Rated</p>
			<% end %>
		</div>
	</div>
	<div class="small-6 columns">
		<h2 class="text-left"><%= @venue.name %></h2>
		<div class="row align-center" >
			<div class="small-2 columns" ></div>
			<div class="small-10 columns" >
				<p class="text-center"><%= @venue.address %></p>
			</div>
		</div>
	</div>
	<div class="small-2 columns" %>
		<div id="favorite">
		<% if current_user && current_user.has_favorited?(@venue) %>
			<%= render partial: 'users/favorite_added' %>
		<% elsif current_user %>
			<%= render partial: 'users/favorite_removed' %>
		<% end %>
		</div>
	</div>
</div>



