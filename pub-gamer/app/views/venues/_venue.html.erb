<div class="row" >
	<div class="small-2 columns" >
	</div>
	<div class="small-8 small-centered columns" >
		<h2><%=@venue.name%></h2>
	</div>
	<div class="small-2 columns" >
	</div>
</div>

<div class="row" >
	<div class="small-2 small-centered columns">
	</div>
	<div class="small-8 small-centered columns">
		<div id="venue-address">Address: <%=@venue.address%>
		</div>
	</div>
	<div class="small-2 small-centered columns">
	</div>
</div>

<div id="favorite">
<% if current_user && current_user.has_favorited?(@venue) %>
	<h4>One of your Favs</h4>
	<%= button_to "Remove from favorites", user_path(current_user), method: :put, id: "fav", params: { venue: @venue } %>
<% elsif current_user %>
	<%= button_to "add favorite!", user_path(current_user), method: :put, id: "fav", params: { venue: @venue } %>
<% end %>
</div>

<div id="avg-rating">
	<% if @venue.has_reviews? %>
		<%= render partial: 'venue_rating', locals: { current_rating: @current_rating } %>
		<% else %>
		<p>No Ratings</p>
	<% end %>
</div>