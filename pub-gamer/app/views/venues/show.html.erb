
<div id="venue-show">
<%= render partial: 'venue' %>

	<div class="row align-spaced" >
		<div class="small-12 medium-4 text-center columns" >
			<h2>Reviews</h2>
			<% if notice %>
				<% notice.each do |error| %>
					<p><%= error %></p>
				<% end %>
			<% end %>
		</div>
	</div>

	<div id="reviews">
		<div id="full-review-container">
			<div id="full-review-content">
			</div>
		</div>
		<% if @venue.has_reviews? %>
			<div id="review-index">
  			<%= render partial: 'reviews/index', locals: { reviews: @reviews } %>
  			<%= will_paginate @reviews %>
  		</div>
  	<% else %>
  		<div id="no-reviews">
  			<%= render partial: 'no_reviews' %>
			</div>
		<% end %>
	</div>
</div>