
<div class="row medium-collapse venue-index-venue index-box" >
	<div class="small-12 show-for-small-only index-title columns text-center" >
		<h5><%=link_to(venue.name, venue_path(venue))%></h5>
		<p class="">
			<%= image_tag("icons/location/location9Orange.png", size: '30', title: "location" ) %>
			<%= venue.address %>
		</p>
	</div>
	<div class="small-7 medium-4 large-3 columns" >
		<div class="index-pic">
			<p class="" >No Photo Added</p>
		</div>
	</div>

	<div class="columns small-5 show-for-small-only">
		<div class=" fav-button-div">
			<%= render partial: "index_fav_buttons", locals: { venue: venue } %>
 		</div>
  	<div class="venue-index-games">
			<% if venue.has_games? %>
				<%= image_tag("icons/dice/dice1Orange.png", size: '30', title: "games" ) %>
				<%= render partial: 'shared/games', locals: { games: venue.games } %>
			<% else %>
				<%= render partial: 'no_games' %>
			<% end %>
		</div>
	</div>
	<!-- </div> -->

	<div class="columns" >
		<div class="hide-for-small-only row medium-collapse">
			<div class="index-title columns text-center">
				<h5><%=link_to(venue.name, venue_path(venue))%></h5>
				<p class="text-left">
					<%= image_tag("icons/location/location9Orange.png", size: '30', title: "location" ) %>
					<%= venue.address %>
				</p>
			</div>
		</div>

		<div class="row medium-collapse hide-for-small-only venue-index-content">
  		<div class="venue-index-games medium-8 columns text-left">
				<% if venue.has_games? %>
					<%= image_tag("icons/dice/dice1Orange.png", size: '30', title: "games" ) %>
					<%= render partial: 'shared/games', locals: { games: venue.games } %>
				<% else %>
					<%= render partial: 'no_games' %>
				<% end %>
			</div>
	  	<div class="medium-3 columns fav-button-div">
			 <%= render partial: "index_fav_buttons", locals: { venue: venue } %>
			</div>
		</div>

		<div class="row venue-index-bottom">
			<div class="hide-for-small-only columns">
  		</div>
  		<div class="small-3 columns text-right align-bottom">
  			<% if venue.avg_rating / 1 == venue.avg_rating %>
				  <p><%= venue.avg_rating %> / 5</p>
  			<% else %>
  				<p>Not Yet Rated</p>
  			<% end %>
  		</div>
			<div class="small-8 columns">
				<div class="venue-index-avg-rating" value="<%= venue.avg_rating %>">
				  <div class="dimmed"></div>
				  <div class="opaque"></div>
				</div>
				<script>
					IndexOctopusRating();
				</script>
  		</div>
<!--   		<div class="small-3 columns">
  		</div> -->
  	</div>
  </div>
</div>
