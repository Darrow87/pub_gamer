
<div class="row venue-index-venue index-box" >
	<div class="small-3 columns" >
		<div class="index-pic" >
			<p class="" >No Photo Added</p>
		</div>
	</div>

	<div class="small-9 columns text-center" >
		<div class="row">
			<div class="small-12 columns">
				<h5 class="index-title"><%=link_to(venue.name, venue_path(venue))%></h5>
				<p class=""><%= venue.address %></p>
			</div>
		</div>

		<div class="row venue-index-content">
  		<div class="small-7 columns">
				<% if venue.has_games? %>
					<%= render partial: 'shared/games', locals: { games: venue.games } %>
				<% else %>
					<%= render partial: 'no_games' %>
				<% end %>
			</div>
	  	<div class="small-5 columns fav-button-div">
			  <% if current_user.has_favorited?(venue) %>
				  <p>One of My Venues!</p>
				<% else %>
			  	<%= button_to "Add To My Venues", user_path(current_user), method: :put, params: { venue: venue, from: "venue-index" }, class: "button venue-index-fav-button" %>
  			<% end %>
			</div>
		</div>

		<div class="row venue-index-bottom">
			<div class="small-4 columns">
  		</div>
  		<div class="small-3 columns text-right align-bottom">
  			<% if venue.avg_rating / 1 == venue.avg_rating %>
				  <p><%= venue.avg_rating %> / 5</p>
  			<% else %>
  				<p>Not Yet Rated</p>
  			<% end %>
  		</div>
			<div class="small-5 columns">
				<div class="venue-index-avg-rating" value="<%= venue.avg_rating %>">
				  <div class="dimmed"></div>
				  <div class="opaque"></div>
				</div>
				<script>
					IndexOctopusRating();
				</script>
  		</div>
<!--   		<div class="small-3 columns">
  		</div> -->
  	</div>
  </div>
</div>
